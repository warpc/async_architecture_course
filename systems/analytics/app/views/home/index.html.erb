<h1>Analytics</h1>

<h2>Daily Statistics</h2>
<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Company profit amount</th>
    <th>Number of users with negative balance</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @daily_statistics.each do |ds| %>
    <tr>
      <td><%= ds.date %></td>
      <td><%= ds.company_profit_amount.to_s %></td>
      <td><%= ds.users_with_negative_balance_count %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h2>Most expensive tasks</h2>
<table>
  <thead>
  <tr>
    <th>Date</th>
    <th>Task public id</th>
    <th>Task price</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @daily_statistics.each do |ds| %>
    <tr>
      <td><%= ds.date %></td>
      <td><%= ds.most_expensive_task_public_id %></td>
      <td><%= ds.most_expensive_task_price%></td>
    </tr>
  <% end %>
  </tbody>
</table>


