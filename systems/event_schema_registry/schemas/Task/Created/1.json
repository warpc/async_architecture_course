{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Task.Created.v1",
  "description": "json schema for CUD tasks events (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "public_id": {
          "type": "string"
        },
        "title": {
          "type": ["string"]
        },
        "description": {
          "type": ["string", "null"]
        },
        "creator_public_id": {
          "type": ["string"]
        },
      },
      "required": [
        "public_id",
        "title",
        "creator_public_id",
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_id":      { "type": "string" },
    "event_version": { "enum": [1] },
    "event_name":    { "enum": ["Task.Created"] },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_id",
    "event_version",
    "event_name",
    "event_time",
    "producer",
    "data"
  ]
}